<h1>Welcome, {{user.username}}</h1>

<div class="row">
	<div class="col-sm-6 col-sm-offset-6">
		<table class="table">
		  <theader>
		   <th>Passport Status</th>
		   <th></th>
		  </theader>
		  {{#each user.passportModules as |module|}}
			  {{#if module.connected}}
				  <tr style="background-color: #dfefce">
				  	<td colspan="2">{{module.name}}</td>
				  </tr>
				{{else}}
					<tr>
				  	<td>{{module.name}}</td>
				  	<td><a class="btn btn-success" href="/auth/{{module.name}}">Connect</a></td>
				  </tr>
				{{/if}}
		  {{/each}}
		</table>
	</div>
</div>


<div class="row">

	{{#if pictures}}
		<div class="col-sm-6">
			<div class="row">
				<h4>Facebook Photos</h4>
				{{#each pictures as |picture|}}
					<div class="col-sm-4">
						<img src="{{picture.picture}}">
					</div>
				{{/each}}
			</div>
		</div>
	{{/if}}

	{{#if repoNames}}
		<div class="col-sm-6">
			<div class="row">
				<h4>Github Repos</h4>
				{{#each repoNames as |repoName|}}
					<div class="col-sm-4">
						<p>{{repoName}}</p>
					</div>
				{{/each}}
			</div>
		</div>
	{{/if}}

</div>

